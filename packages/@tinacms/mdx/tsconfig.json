{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2021",
    "moduleResolution": "node",
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "vite-env.d.ts"]
}
