{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es5",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.tsx", "src/**/*.test.ts", "src/**/*.spec.ts", "src/**/*.spec.tsx"],
  "include": ["src"]
}
