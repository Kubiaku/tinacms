{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@tinacms/*",
    "examples/*",
    "packages/[^@]*"
  ],
  "scripts": {
    "build": "yarn buildBuilder && yarn workspaces foreach --topological-dev --no-private run g:echo | cat > topologicalDeps.txt && yarn workspace @tinacms/tina-build build:all",
    "watch": "yarn build && yarn workspace @tinacms/tina-build watch:all",
    "buildBuilder": "yarn workspace @tinacms/tina-build build",
    "test": "yarn workspaces foreach --no-private -p run test",
    "nuke": "yarn workspaces foreach --no-private -p run g:nuke",
    "g:echo": "echo $INIT_CWD",
    "g:nuke": "cd $INIT_CWD && yarn exec rm -rf dist && echo \"Cleaned build files from ${INIT_CWD}\""
  },
  "dependencies": {
    "@changesets/cli": "^2.16.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.20",
    "danger": "^10.6.4",
    "eslint": "^6.8.0",
    "prettier": "^2.3.2",
    "typescript": "^3.8.3",
    "workspace": "^0.0.1-preview.1"
  }
}
